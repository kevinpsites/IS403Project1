
@{
    ViewBag.Title = "Bio";
}
<style>
    input {
        width: 100%;
    }
</style>
<ol class="breadcrumb">
    <li><a href="@Url.Action("Index","Home")">Home</a></li>
    <li><a href="@Url.Action("Index","FreeLance")">Freelancer</a></li>
    <li class="active">@ViewBag.Name</li>
</ol>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="~/Images/@(ViewBag.name)/@(ViewBag.picture)" class="img-responsive"/>
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 text-center"><h2>@ViewBag.Name</h2></div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center"><p>@ViewBag.bio</p></div>
            </div>

        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-center">
            <p>@ViewBag.portfolio</p>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            FAQ SECTION
        </div>
    </div>
</div>


