            </div> 
        </div>
    </div>
</div>

<div class="container">
    <div id="">
        @Html.Partial("Questions")
    </div>
</div>

<div class="container">
    <br />
    <hr class="side" />

    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-12">
                    <h4 style="display:inline;">PERSON'S NAME</h4> - 
                    <p style="display:inline; font-weight:700;">DATE Question WAS POSTED</p> 
                </div>
                <div class="col-xs-4">
                    
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <p>Question posted here.</p>
                </div>
            </div>
           
            <div class="row">
                <div class="col-xs-offset-4 col-xs-4">
                    <a data-toggle="collapse" href="#collapse1">Answer this Question</a>
                </div>
            </div>
            <div class="row">
                <div id="collapse1" class="panel-collapse collapse">
                    @Html.Partial("Questions")
                </div>
            </div>
        </div>
    </div>
</div>

