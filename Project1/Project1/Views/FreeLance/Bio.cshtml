        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12 text-center"><h2>@ViewBag.Name</h2></div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center"><p>@ViewBag.bio</p></div>
            </div>

        </div>
    </div>

    <br />

    <div class="row">
        <div class="col-md-12 text-center">
            <div class="page-header">
